package ferris_david_page72_question5;

import javax.swing.JOptionPane;

/**
 *
 * @author davidferris
 */
public class Ferris_David_Page72_Question5 {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {

        String input;
        
        input = JOptionPane.showInputDialog("New Input");
        
        System.out.println(input + " Times Table:");
        
        int number = Integer.parseInt(input);

        for (int i = 0; i <= number; i ++) {
            System.out.format("%3s %3s %3s %3s %6s %s", number, "x", i, "=", number*i, "\n");
        }
    }
}
